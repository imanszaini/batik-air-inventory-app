<head>
  <meta charset="UTF-8">
  <title>Batik Air Inventory Tracker</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
      background: #f4f6f9;
    }
    h1 { text-align: center; color: #333; }
    .container {
      max-width: 800px;
      margin: auto;
      background: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }
    form, .search-box {
      display: grid;
      gap: 10px;
      margin-bottom: 20px;
    }
    input, select, button {
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 14px;
    }
    button {
      background: #007bff;
      color: white;
      cursor: pointer;
    }
    button:hover { background: #0056b3; }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 15px;
    }
    th, td {
      border: 1px solid #ddd;
      padding: 10px;
      text-align: center;
    }
    th { background: #007bff; color: white; }
    .highlight { background: #d1ecf1; }
  </style>
</head>
<body>

  <h1>Batik Air Inventory Tracker</h1>
  <div class="container">

    <!-- Upload / Add Item -->
    <h2>Add New Item</h2>
    <form id="addForm">
      <input type="text" id="pn" placeholder="PN Description (Part Number)" required>
      <input type="text" id="sn" placeholder="SN (Serial Number)" required>
      <input type="text" id="batch" placeholder="Batch Number" required>
      <input type="text" id="bin" placeholder="Bin (Storage)" required>
      <select id="location" required>
        <option value="">-- Select Location --</option>
        <option value="Current">Current</option>
        <option value="Shipped From">Shipped From</option>
        <option value="Shipped To">Shipped To</option>
      </select>
      <button type="submit">Add Item</button>
    </form>

    <!-- Search -->
    <h2>Search by PN or SN</h2>
    <div class="search-box">
      <input type="text" id="searchInput" placeholder="Enter PN or SN to track">
      <button onclick="searchItem()">Search</button>
    </div>

    <!-- Results -->
    <table id="inventoryTable">
      <thead>
        <tr>
          <th>PN Description</th>
          <th>SN</th>
          <th>Batch</th>
          <th>Bin</th>
          <th>Location</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>

  </div>

  <script>
    let items = JSON.parse(localStorage.getItem('inventoryItems')) || [];

    const form = document.getElementById('addForm');
    const tableBody = document.querySelector('#inventoryTable tbody');

    // Render full inventory
    function renderTable(highlightIndex = null) {
      tableBody.innerHTML = '';
      items.forEach((item, index) => {
        const row = document.createElement('tr');
        if (highlightIndex === index) row.classList.add('highlight');
        row.innerHTML = `
          <td>${item.pn}</td>
          <td>${item.sn}</td>
          <td>${item.batch}</td>
          <td>${item.bin}</td>
          <td>${item.location}</td>
        `;
        tableBody.appendChild(row);
      });
    }

    // Add item
    form.addEventListener('submit', e => {
      e.preventDefault();
      const newItem = {
        pn: document.getElementById('pn').value.trim(),
        sn: document.getElementById('sn').value.trim(),
        batch: document.getElementById('batch').value.trim(),
        bin: document.getElementById('bin').value.trim(),
        location: document.getElementById('location').value
      };
      items.push(newItem);
      localStorage.setItem('inventoryItems', JSON.stringify(items));
      renderTable();
      form.reset();
    });

    // Search function
    function searchItem() {
      const query = document.getElementById('searchInput').value.trim().toLowerCase();
      if (!query) {
        renderTable();
        return;
      }
      const foundIndex = items.findIndex(item =>
        item.pn.toLowerCase() === query || item.sn.toLowerCase() === query
      );
      if (foundIndex >= 0) {
        renderTable(foundIndex); // highlight found row
      } else {
        alert("Item not found!");
      }
    }

    // Initial render
    renderTable();
  </script>
</body>
</html>
